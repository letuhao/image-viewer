{
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "image_viewer"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "ImageViewer.Api"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:11000;https://localhost:11001",
  "Jwt": {
    "Key": "YourSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "ImageViewer",
    "Audience": "ImageViewer",
    "ExpiryHours": 24
  }
}