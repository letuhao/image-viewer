{
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "image_viewer"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "CollectionScanQueue": "collection.scan",
    "ThumbnailGenerationQueue": "thumbnail.generation",
    "CacheGenerationQueue": "cache.generation",
    "CollectionCreationQueue": "collection.creation",
    "BulkOperationQueue": "bulk.operation",
    "ImageProcessingQueue": "image.processing",
    "DefaultExchange": "imageviewer.exchange",
    "DeadLetterExchange": "imageviewer.dlx",
    "MaxRetryCount": 3,
    "MessageTimeout": "24:00:00",
    "ConnectionTimeout": "00:00:30",
    "PrefetchCount": 100,
    "AutoAck": false,
    "MessageBatchSize": 1000,
    "MaxQueueLength": 50000000,
    "MaxImageSizeBytes": 524288000,
    "MaxZipEntrySizeBytes": 21474836480,
    "_comment_PrefetchCount": "Limits concurrent message processing per consumer to prevent resource exhaustion. 10 = process max 10 images at once. Increase for more throughput, decrease for lower resource usage.",
    "_comment_MessageBatchSize": "Number of messages to batch before publishing to RabbitMQ. Higher = faster bulk operations but more memory. Default: 100",
    "_comment_MaxQueueLength": "Maximum messages allowed in queue. Prevents unbounded growth if workers die. Default: 100000",
    "_comment_MaxImageSizeBytes": "Maximum size for regular image files in bytes. Default: 524288000 (500MB). Prevents OOM on huge images.",
    "_comment_MaxZipEntrySizeBytes": "Maximum uncompressed size for ZIP/archive entries in bytes. Default: 21474836480 (20GB). ZIP entries can be larger as they're processed streaming."
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Extensions.Http": "Warning",
        "System": "Warning",
        "System.Net.Http": "Warning",
        "ImageViewer.Worker.Services": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/worker-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "ImageViewer.Worker"
    }
  }
}
