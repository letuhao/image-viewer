{
  "name": "image-viewer",
  "version": "1.0.0",
  "description": "Advanced image viewer with collection management",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "setup": "node setup.js",
    "setup:start": "node setup.js --start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop image-viewer",
    "pm2:restart": "pm2 restart image-viewer",
    "pm2:logs": "pm2 logs image-viewer",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "image-viewer",
    "manga",
    "collection",
    "zip"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-7z": "^3.0.0",
    "node-stream-zip": "^1.15.0",
    "path": "^0.12.7",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "pm2": "^6.0.13"
  }
}
