{
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "image_viewer"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "CollectionScanQueue": "collection.scan",
    "ThumbnailGenerationQueue": "thumbnail.generation",
    "CacheGenerationQueue": "cache.generation",
    "CollectionCreationQueue": "collection.creation",
    "BulkOperationQueue": "bulk.operation",
    "ImageProcessingQueue": "image.processing",
    "DefaultExchange": "imageviewer.exchange",
    "DeadLetterExchange": "imageviewer.dlx",
    "MaxRetryCount": 3,
    "MessageTimeout": "00:30:00",
    "ConnectionTimeout": "00:00:30",
    "PrefetchCount": 10,
    "AutoAck": false
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "ImageViewer:",
    "DefaultExpirationMinutes": 60,
    "ImageCacheExpirationMinutes": 120,
    "EnableCompression": true,
    "MaxCacheSizeBytes": 51539607552,
    "AbsoluteExpirationRelativeToNowHours": 24,
    "SlidingExpirationMinutes": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "ImageViewer.Api"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:11000;https://localhost:11001",
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpiryHours": 24
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "AccountLockoutDurationMinutes": 30,
    "PasswordMinLength": 8,
    "RequireStrongPassword": true,
    "SessionTimeoutHours": 24,
    "EnableTwoFactor": true,
    "BackupCodesCount": 10
  }
}